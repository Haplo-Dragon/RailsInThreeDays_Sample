<% provide(:title, @user.name) %>

<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
</div>

<small>Created at <%= @user.created_at %></small>
<small>Last updated at <%= @user.updated_at %></small>
